<!-- layout.ejs -->
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %> | CSE Motors
    </title>

    <!-- CSS Links -->
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="/css/main.css">
</head>

<body>

    <!-- Header Partial -->
    <%- include('../partials/header') %>

        <!-- Flash Messages -->
        <% if (messages && messages.notice && messages.notice.length> 0) { %>
            <div class="flash-message <%= messages.messageType && messages.messageType[0] || 'info' %>">
                <%= messages.notice[0] %>
            </div>
            <% } %>

                <!-- Main Content -->
                <main>
                    <%- body %>
                </main>

                <!-- Footer Partial -->
                <%- include('../partials/footer') %>

</body>

</html>