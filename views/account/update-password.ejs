    <main>
        <h1>Change Password</h1>

        <% if (errors && errors.length> 0) { %>
            <div class="errors">
                <ul>
                    <% errors.forEach(error=> { %>
                        <li>
                            <%= error.msg %>
                        </li>
                        <% }) %>
                </ul>
            </div>
            <% } %>

            <h2>Change Password</h2>
            <form action="/account/update-password" method="POST">
                <label for="account_password">New Password</label>
                <input type="password" id="account_password" name="account_password" required>
                <p class="note">
                    Password must be at least 12 characters and include 1 uppercase letter, 1 lowercase letter, 1 number, and 1
                    special character.
                </p>
            
                <input type="hidden" name="account_id" value="<%= account.account_id %>">

                <input type="submit"  class="btn-submit" value="Change Password">
            </form>
    </main>

